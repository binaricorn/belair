@import "constants";


ba-player {
  display: flex;
  height: 84px;
  padding: 8px 0;
  margin-top: 30px;


  .episode-data {
    display: inline-block;
    margin-left: 4px;

    .show-name {
      display: block;
      font-family: 'HKGrotesk Bold';
     // font-size: 16px;
      //line-height: 16px;
    }

    .episode-name {
      display: block;
      //font-size: 12px;
      //line-height: 22px;
    }
  }

  .play-pause {
    height: 32px;
    width: 32px;
    display: inline-block;
    font-size: 16px;
    line-height: 28px;
    padding-left: 2px;
    text-align: center;
    border-radius: 16px;
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;
    border: 2px black solid;
    color: black;
    text-decoration: none;
  }

  .mejs-container {
    display: none;
  }
}
